{
  "info": {
    "name": "Simple Books API - Complete Assignment",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "simple-books-api-complete"
  },
  "item": [
    {
      "name": "POST Get Access Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"clientName\": \"Test User\", \"clientEmail\": \"testuser359799@example.com\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api-clients",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api-clients"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "let jsonData = pm.response.json();",
              "pm.environment.set(\"accessToken\", jsonData.accessToken);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "GET All Books",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/books",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "books"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "let books = pm.response.json();",
              "console.log(\"First book ID:\", books[0].id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST Place Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"bookId\": 1, \"customerName\": \"{{customerName}}\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "let names = ['Ali', 'Sara', 'Ahmed', 'Fatima'];",
              "let randomName = names[Math.floor(Math.random() * names.length)];",
              "pm.environment.set(\"customerName\", randomName);"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "let jsonData = pm.response.json();",
              "pm.environment.set(\"orderId\", jsonData.orderId);",
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.environment.unset(\"customerName\");"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PATCH Update Order",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"customerName\": \"Updated Name\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders/{{orderId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders",
            "{{orderId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Order updated\", function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "DELETE Order",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/orders/{{orderId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders",
            "{{orderId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Order deleted\", function () {",
              "    pm.response.to.have.status(204);",
              "});",
              "pm.test(\"Failing test intentionally\", function () {",
              "    pm.response.to.have.status(404);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Dummy PUT Request",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"note\": \"PUT not supported in actual API, this is a placeholder.\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/dummy-put",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "dummy-put"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"PUT request made (dummy)\", function () {",
              "    pm.response.to.have.status(404);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}